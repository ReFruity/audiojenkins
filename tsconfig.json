{
  "compilerOptions": {
    "strict": true,
    "target": "ES2021",
    "declaration": true,
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["ES2021"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "importsNotUsedAsValues": "remove",
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "outDir": "dist"
  },
  "ts-node": {
    "files": true
  }
}
